<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smdproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UberBooking"></activity>
        <activity
            android:name=".WorldClock"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Weather"
            android:parentActivityName=".Home" />
        <activity
            android:name=".CurrencyConverter"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Translator"
            android:label="Translator"
            android:parentActivityName=".Home" />
        <activity android:name=".ReviewsActivity" />
        <activity
            android:name=".PlaceDetail"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Home"
            android:label="Places" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>